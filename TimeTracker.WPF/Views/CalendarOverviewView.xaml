<UserControl
    x:Class="TimeTracker.WPF.Views.CalendarOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:TimeTracker.WPF.ViewModels"
    xmlns:converters="clr-namespace:TimeTracker.WPF.Converters"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    d:DataContext="{d:DesignInstance viewModels:CalendarOverviewViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:TotalDurationConverter x:Key="TotalDurationConverter" />
        <converters:CollapsedWhenNullConverter x:Key="CollapsedWhenNullConverter" />
        
        <CollectionViewSource x:Key="Source"
                              Source="{Binding Trackings, UpdateSourceTrigger=PropertyChanged}"
                              IsLiveGroupingRequested="True">
            <CollectionViewSource.LiveGroupingProperties>
                <system:String>CalendarWeek</system:String>
            </CollectionViewSource.LiveGroupingProperties>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="CalendarWeek"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" ItemsSource="{Binding Source={StaticResource Source}}"
                  HorizontalContentAlignment="Stretch"
                  SelectedItem="{Binding SelectedTracking}"
                  SelectionChanged="OnSelectionChanged"
                  SelectionMode="Extended">
            <ListView.ItemTemplate>
                <DataTemplate DataType="viewModels:TrackingViewModel">
                    <materialDesign:Card Margin="4">
                        <materialDesign:Card.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding DeleteTrackingCommand}">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                Kind="Delete" />
                                            <TextBlock VerticalAlignment="Center" Margin="8,0,8,0" Text="Delete" />
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                            </ContextMenu>
                        </materialDesign:Card.ContextMenu>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding Date}" />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text=" / " />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding StartTime}" />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text=" / " />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding EndTime}" />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text=" / " />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding Duration}" />
                            <Button
                                Margin="4"
                                VerticalAlignment="Center"
                                Command="{Binding StopTrackingCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Content="Stop"/>
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Margin" Value="0,0,0,4"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True" BorderBrush="{DynamicResource PrimaryHueLightBrush}" 
                                                  BorderThickness="0,0,0,1">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock VerticalAlignment="Center"
                                                               FontWeight="Bold" 
                                                               Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" 
                                                               Margin="4,0,0,0"/>
                                                    <TextBlock VerticalAlignment="Center"
                                                               FontWeight="Bold" 
                                                               Text="Total:" 
                                                               Margin="16,0,0,0"/>
                                                    <TextBlock VerticalAlignment="Center"
                                                               FontWeight="Bold" 
                                                               Margin="4,0,0,0">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource TotalDurationConverter}">
                                                                <Binding Path="DataContext.GroupDurations" RelativeSource="{RelativeSource AncestorType=ListView}" />
                                                                <Binding Path="Name"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <Button
                                                        Margin="16,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Command="{Binding DataContext.ExportSelectedTrackingsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding Items}"
                                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                                        Content="Export"/>
                                                </StackPanel>
                                            </Expander.Header>
                                            <Expander.Content>
                                                <ItemsPresenter />
                                            </Expander.Content>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        
        <Button Grid.Row="1"
                Margin="8"
                Command="{Binding ExportSelectedTrackingsCommand}"
                CommandParameter="{Binding SelectedTrackings}"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Visibility="{Binding SelectedTrackings, Converter={StaticResource CollapsedWhenNullConverter}}"
                Content="Export Selected Trackings"/>
    </Grid>
</UserControl>